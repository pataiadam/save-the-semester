<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"> Rates</h3>
        </div>
        <div class="panel-body">
            <form method="POST" role="form">

                <input type="hidden" name="id" value="{{rate.id}}">

                <div class="form-group">
                    <label>User</label>
                    <select class="form-control" name="userId">
                        {{#each users}}
                            {{#isEqual this.id ../rate.userId}}
                                <option value="{{this.id}}" selected="selected">{{this.name}}</option>
                            {{else}}
                                <option value="{{this.id}}">{{this.name}}</option>
                            {{/isEqual}}
                        {{/each}}
                    </select>
                </div>

                <div class="form-group">
                    <label>RatedUser</label>
                    <select class="form-control" name="ratedUserId">
                        {{#each users}}
                            {{#isEqual this.id ../rate.ratedUserId}}
                                <option value="{{this.id}}" selected="selected">{{this.name}}</option>
                            {{else}}
                                <option value="{{this.id}}">{{this.name}}</option>
                            {{/isEqual}}
                        {{/each}}
                    </select>
                </div>

                <div class="form-group">
                    <label>Circle</label>
                    <select class="form-control" name="circleId">
                        {{#each circles}}
                            {{#isEqual this.id ../rate.circleId}}
                                <option value="{{this.id}}" selected="selected">{{this.name}}</option>
                            {{else}}
                                <option value="{{this.id}}">{{this.name}}</option>
                            {{/isEqual}}
                        {{/each}}
                    </select>
                </div>

                <div class="form-group">
                    <label>Value</label>
                    <input class="form-control" name="value" value="{{rate.value}}">
                </div>

                <div class="form-group">
                    <label>Comment</label>
                    <input class="form-control" name="comment" value="{{rate.comment}}">
                </div>

                <button type="submit" class="btn btn-default">Submit Button</button>
                <button type="reset" class="btn btn-default">Reset Button</button>
            </form>
        </div>
    </div>
</div>
