<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">&nbsp;Learner</h3>
        </div>
        <div class="panel-body">
            <form method="POST" role="form">

                <input type="hidden" name="id" value="{{learner.id}}">

                <div class="form-group">
                    <label>User</label>
                    <select class="form-control" name="userId">
                        {{#each users}}
                            {{#isEqual this.id ../learner.userId}}
                                <option value="{{this.id}}" selected="selected">{{this.name}}</option>
                            {{else}}
                                <option value="{{this.id}}">{{this.name}}</option>
                            {{/isEqual}}
                        {{/each}}
                    </select>
                </div>

                <div class="form-group">
                    <label>Coach</label>
                    <select class="form-control" name="coachId">
                        {{#each coaches}}
                            {{#isEqual this.id ../learner.coachId}}
                                <option value="{{this.id}}" selected="selected">{{this.subject}}</option>
                            {{else}}
                                <option value="{{this.id}}">{{this.subject}}</option>
                            {{/isEqual}}
                        {{/each}}
                    </select>
                </div>

                <button type="submit" class="btn btn-default">Submit Button</button>
                <button type="reset" class="btn btn-default">Reset Button</button>
            </form>
        </div>
    </div>
</div>
