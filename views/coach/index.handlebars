<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">&nbsp;Coaches</h3>
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                    <tr>
                        <th>id</th>
                        <th>subject</th>
                        <th>description</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each coaches}}
                        <tr>
                            <td>{{this.id}}</td>
                            <td>{{this.subject}}</td>
                            <td>{{this.description}}</td>
                            <td>
                                <a href="/coach/show?id={{this.id}}" class="btn btn-xs btn-primary"
                                   role="button">Show</a>
                                <a href="/coach/update?id={{this.id}}" class="btn btn-xs btn-primary" role="button">Update</a>
                                <!--{{#unless this.deletedAt}}
                                    <a href="/coach/delete?id={{this.id}}" class="btn btn-xs btn-danger" role="button">Delete</a>
                                {{/unless}}-->
                            </td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
            <div class="text-right">
                <a href="/coach/create">Create new coach <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
    </div>
</div>
